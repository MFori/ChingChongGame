<cz.martinforejt.chingchong.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.martinforejt.chingchong.SettingsFragment">

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:contentDescription="@string/desc_back"
        android:onClick="backToMenu"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_back" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="65dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="@string/title_settings"
        android:textSize="50sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="150dp"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/settings_name_text"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_nickname"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings_change_name"
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:background="@drawable/menu_button"
                android:text="@string/btn_nickname"
                android:textSize="33sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundbrown" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_sound"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings_sound"
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:background="@drawable/menu_button"
                android:text="@string/btn_sound"
                android:textSize="33sp" />

        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="@color/backgroundbrown" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="@string/title_vibrate"
                android:textColor="#000"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/settings_vibrate"
                android:layout_width="140dp"
                android:layout_height="75dp"
                android:background="@drawable/menu_button"
                android:text="@string/btn_vibrate"
                android:textSize="33sp" />

        </LinearLayout>

    </LinearLayout>

</cz.martinforejt.chingchong.GameLayout>
