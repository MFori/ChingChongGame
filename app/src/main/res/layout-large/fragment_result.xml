<cz.martinforejt.chingchong.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.martinforejt.chingchong.ResultFragment">

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:contentDescription="@string/desc_back"
        android:background="@null"
        android:onClick="backToMenu"
        android:scaleType="fitCenter"
        android:src="@drawable/menu_back" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/win"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/res_text"
            android:textSize="70sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="80dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/myScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:gravity="right"
                android:paddingRight="5dp"
                android:text="Fori"
                android:textStyle="italic"
                android:textSize="50sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/result_score"
                android:gravity="center"
                android:text="1 : 1"
                android:textStyle="bold"
                android:textSize="50sp" />

            <TextView
                android:id="@+id/rivalScore"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:text="Android"
                android:textStyle="italic"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:textSize="50sp" />

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_rematch"
        android:layout_width="150dp"
        android:layout_height="55dp"
        android:layout_gravity="bottom|center"
        android:background="@drawable/menu_button"
        android:textSize="30sp"
        android:layout_marginBottom="80dp"
        android:text="@string/res_btn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|center"
        android:layout_marginBottom="80dp"
        android:text="@string/res_waiting"
        android:id="@+id/rematch_text_waiting"
        android:textSize="25sp"
        android:visibility="gone"/>

</cz.martinforejt.chingchong.GameLayout>
