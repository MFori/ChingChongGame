<cz.martinforejt.chingchong.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.martinforejt.chingchong.NewPlayerFragment">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:focusableInTouchMode="true"
        android:focusable="true"
        android:orientation="vertical">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:text="@string/title_new_player"
            android:textSize="40sp" />

        <EditText
            android:id="@+id/edit_name_first"
            android:layout_width="350dp"
            android:layout_height="55dp"
            android:hint="@string/new_player_hint"
            android:inputType="textPersonName"
            android:textCursorDrawable="@drawable/cursor"
            android:padding="10dp"
            android:layout_marginTop="75dp"
            android:layout_gravity="center"
            android:background="@drawable/nickname"
            android:lines="1"
            android:textSize="20sp"
            android:singleLine="true" />

        <Button
            android:id="@+id/btn_name_first"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/menu_button"
            android:layout_marginTop="45dp"
            android:textSize="30sp"
            android:text="@string/new_player_btn" />

    </LinearLayout>

</cz.martinforejt.chingchong.GameLayout>
