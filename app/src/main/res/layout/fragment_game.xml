<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2b2b2b"
    tools:context="cz.martinforejt.chingchong.GameFragment">

    <cz.martinforejt.chingchong.GameView
        android:id="@+id/gameView"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/left_player_background"
                    android:paddingBottom="8dp"
                    android:paddingRight="35dp">

                    <TextView
                        android:id="@+id/player_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="center"
                        android:text="Máš 2 palce"
                        android:textColor="#fff" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/player_thumb_1"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumb" />


                    <ImageView
                        android:id="@+id/player_thumb_2"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumb" />


                </LinearLayout>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right"
                    android:background="@drawable/right_player_background"
                    android:gravity="right"
                    android:paddingBottom="8dp"
                    android:paddingLeft="35dp">

                    <ImageView
                        android:id="@+id/rival_thumb_2"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumb" />

                    <ImageView
                        android:id="@+id/rival_thumb_1"
                        android:layout_width="22dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/thumb" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <TextView
                        android:id="@+id/rival_name"
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:gravity="right|center_vertical"
                        android:text="Má 2 palce"
                        android:textColor="#fff" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/animate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="35sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="2.1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_marginTop="30dp"
                    android:layout_weight="2">

                    <ImageButton
                        android:id="@+id/left"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitStart"
                        android:adjustViewBounds="true"
                        android:src="@drawable/left_fist" />


                    <ImageButton
                        android:id="@+id/right"
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:background="@null"
                        android:scaleType="fitEnd"
                        android:adjustViewBounds="true"
                        android:src="@drawable/right_fist" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/numbers_background"
                    android:orientation="vertical"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/click3"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/chong_button_active"
                            android:text="3"
                            android:textColor="#fff"
                            android:textSize="25sp" />

                        <Button
                            android:id="@+id/click4"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/chong_button_active"
                            android:text="4"
                            android:textColor="#fff"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/click1"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/chong_button_active"
                            android:text="1"
                            android:textColor="#fff"
                            android:textSize="25sp" />


                        <Button
                            android:id="@+id/click2"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_margin="6dp"
                            android:layout_weight="1"
                            android:background="@drawable/chong_button_active"
                            android:text="2"
                            android:textColor="#fff"
                            android:textSize="25sp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/click0"
                        android:layout_width="fill_parent"
                        android:layout_height="0dp"
                        android:layout_margin="6dp"
                        android:layout_weight="1"
                        android:background="@drawable/chong_button_active"
                        android:text="0"
                        android:textColor="#fff"
                        android:textSize="25sp" />


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>
