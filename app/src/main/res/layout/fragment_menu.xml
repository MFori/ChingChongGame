<cz.martinforejt.chingchong.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.martinforejt.chingchong.MenuFragment">

    <!--<ImageView
        android:id="@+id/backgroundImg"
        android:contentDescription="background"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background" /> -->

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="120dp"
        android:paddingTop="10dp"
        android:id="@+id/menu_logo"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:onClick="playMultiPlayer"
            android:text="MULTIPLAYER" />

        <Button
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_margin="10dp"
            android:onClick="playSinglePlayer"
            android:text="SINGLEPLAYER" />

    </LinearLayout>

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/rate"
        android:background="@null"
        android:id="@+id/menu_rate"/>


    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/exit"
        android:layout_gravity="right"
        android:background="@null"
        android:id="@+id/menu_exit"/>


    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/settings"
        android:layout_gravity="bottom"
        android:background="@null"
        android:id="@+id/menu_settings"/>


    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:scaleType="fitCenter"
        android:src="@drawable/about"
        android:layout_gravity="bottom|right"
        android:background="@null"
        android:id="@+id/menu_about"/>

</cz.martinforejt.chingchong.GameLayout>
