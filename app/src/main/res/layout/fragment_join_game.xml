<cz.martinforejt.chingchong.GameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="cz.martinforejt.chingchong.JoinGameFragment">

    <ImageButton
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_margin="5dp"
        android:background="@null"
        android:onClick="backToMenu"
        android:scaleType="fitCenter"
        android:src="@drawable/back" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_marginTop="5dp"
        android:gravity="center"
        android:text="Join"
        android:textSize="35sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/ip_address_text"
            android:layout_width="fill_parent"
            android:layout_height="105dp"
            android:gravity="center"
            android:hint="IP ADDRESS"
            android:text=""
            android:textSize="42sp" />

        <!-- Keyboard -->
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/backgroundbrownOp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/ip_key_0"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="0"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="1"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_2"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="2"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_3"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="3"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_4"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="4"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/ip_key_5"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="5"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_6"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="6"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_7"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="7"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_8"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="8"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/ip_key_9"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="9"
                    android:textSize="35sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <Button
                    android:id="@+id/ip_key_dot"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:paddingBottom="20dp"
                    android:text="."
                    android:textSize="45sp" />

                <Button
                    android:id="@+id/ip_key_back"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="back"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/ip_key_cancel"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:background="@drawable/keyboardkey"
                    android:text="X"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/ip_key_ok"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="2"
                    android:background="@drawable/keyboardkey"
                    android:text="OK"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</cz.martinforejt.chingchong.GameLayout>
